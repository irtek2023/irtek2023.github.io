    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const wrapLabel = (str, maxWidth = 16) => {
                if (str.length <= maxWidth) {
                    return str;
                }
                const words = str.split(' ');
                const lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + ' ' + word).trim().length > maxWidth) {
                        lines.push(currentLine.trim());
                        currentLine = word;
                    } else {
                        currentLine = (currentLine + ' ' + word).trim();
                    }
                }
                if (currentLine) {
                    lines.push(currentLine.trim());
                }
                return lines;
            };

            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                }
                return label;
            };
            
            const chartDefaultOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: '#FFFFFF',
                            font: {
                                size: 14
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                }
            };

            const engagementCtx = document.getElementById('engagementChart').getContext('2d');
            new Chart(engagementCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Atividades Extracurriculares', 'Voz Estudantil', 'Ambiente Positivo'],
                    datasets: [{
                        label: 'Pilares do Engajamento',
                        data: [33.3, 33.3, 33.4],
                        backgroundColor: ['#7a5195', '#ef5675', '#ffa600'],
                        borderColor: '#374c80',
                        borderWidth: 3,
                        hoverOffset: 4
                    }]
                },
                options: { ...chartDefaultOptions }
            });

            const collaborationCtx = document.getElementById('collaborationChart').getContext('2d');
            const collaborationLabels = ['Equipe Pedagógica', 'Corpo Docente', 'Diretoria e Gestão', 'Comunidade e Famílias'];
            new Chart(collaborationCtx, {
                type: 'bar',
                data: {
                    labels: collaborationLabels.map(label => wrapLabel(label)),
                    datasets: [{
                        label: 'Nível de Envolvimento Essencial',
                        data: [95, 90, 85, 80],
                        backgroundColor: ['#bc5090', '#ef5675', '#ff764a', '#ffa600'],
                        borderColor: '#FFFFFF',
                        borderWidth: 1
                    }]
                },
                options: {
                    ...chartDefaultOptions,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            ticks: { color: '#FFFFFF' },
                            grid: { color: 'rgba(255, 255, 255, 0.2)' },
                            suggestedMin: 0,
                            suggestedMax: 100
                        },
                        y: {
                            ticks: { color: '#FFFFFF', font: {size: 14}},
                            grid: { display: false }
                        }
                    },
                    plugins: {
                        ...chartDefaultOptions.plugins,
                         legend: { display: false }
                    }
                }
            });
        });
    </script>
